<main id="main">
  <!-- Main content -->
  <div class="">
    <h1
      class="text-center login-title"
      style="
        color: var(--main_color);
        font-weight: bold;
        font-size: 3rem;
        margin-bottom: 2rem;
      "
    >
      Fotobook Login
    </h1>

    <div
      class="d-flex align-items-center justify-content-center"
      style="
        width: 60%;
        border: 2px solid #bdbdbd;
        margin: auto;
        gap: 2rem;
        padding: 0.5rem 0;
        border-radius: 0.5rem;
      "
    >
      <img
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQjzC2JyZDZ_RaWf0qp11K0lcvB6b6kYNMoqtZAQ9hiPZ4cTIOB"
        alt=""
        style="width: 3rem; height: 3rem"
      />
      <img
        src="https://upload.wikimedia.org/wikipedia/commons/b/b8/2021_Facebook_icon.svg"
        alt=""
        style="width: 2.5rem; height: 2.5rem;"
      />
    </div>

    <div class="account-wall">
      <img
        class="profile-img"
        src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
        alt=""
      />
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <%= form.text_field :email, class: "form-control", autofocus: true %>
        <%= form.password_field :password, class: "form-control", autocomplete: "current-password" %>
        <%= form.submit "Log in", class: "btn btn-lg btn-primary btn-block", style: "
            background-color: var(--main_color);
            padding: 0.7rem 2rem;
            font-weight: 500;
            margin-top: 1rem;
            margin-bottom: 2rem;
          " %>
        <a
          href="#"
          class=""
          style="
            color: var(--main_color);
            display: block;
            text-decoration: none;
          "
          >Forgot password
        </a>
      <% end %>
    </div>
    <a
      href="/signup/index.html"
      class="text-center new-account"
      style="color: var(--main_color); text-decoration: none"
      >Create an account
    </a>
  </div>
</main>
